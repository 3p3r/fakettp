{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2022",
    "allowJs": true,
    "lib": ["ES2021", "DOM", "WebWorker"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "dist/build"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist/build"]
}
